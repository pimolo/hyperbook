{% extends 'base.html.twig' %}

{% block body %}
    <h1>Book list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Description</th>
                <th>Download</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('book_show', { 'slug': book.slug }) }}">{{ book.name }}</a></td>
                <td>{{ book.author }}</td>
                <td>{{ book.description }}</td>
                <td><a href="{{ path('book_download', {'slug': book.slug }) }}">{{ book.name }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('book_show', { 'slug': book.slug }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
